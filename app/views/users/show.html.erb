<% @title = @user.name %>
<p id="notice"><%= notice %></p>

<aside class="row">
	<section class="col col-lg-3">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>	
		</h1>
	<section>
      <%= render 'shared/stats' %>
    </section>
	</section>


	<div class="col col-lg-9 pull-right">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.microposts.any? %>
		  <h3>Microposts (<%= @user.microposts.count %>)</h3>
		  <ol class="microposts">
		    <%= render @microposts %>
		  </ol>
		  <%= will_paginate @microposts %>
		<% end %>
	</div>
</aside>




